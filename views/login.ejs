<div class="container">
  <div class="row">
    
    <div class="row col-xs-12 col-sm-4 col-sm-offset-4" style="padding-top:2em;">
      <div class="panel panel-default">

        <div class="panel-body" style="background: #eee;">
          <div class="col-xs-12" style="margin-bottom:25px;">
            <img src="/images/vectors/shipLogo.svg" class="col-xs-8 col-xs-offset-2" style="height:200px;" />
          </div>
          
          <p class="text-center">Ingresa tus credenciales para jugar</p>
          
          <form id="login-form" action="/auth/login/" method="post" name="Login_Form" class="login"> 
          
            <div style="margin-top: 20px; margin-bottom: 25px" class="col-xs-12 input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input id="login-username" type="text" class="form-control" name="name" value="" placeholder="Usuario">                                        
            </div>
                                    
            <div style="margin-bottom: 35px" class="col-xs-12 input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <input id="login-password" type="password" class="form-control" name="password" placeholder="Contraseña">
            </div>
            
            <button class="col-xs-12 btn btn-lg btn-primary btn-block" style="margin-bottom:10px;">Iniciar Sesión</button> 

          </form>
          
          <a href="/sign-up/" class="col-xs-12 text-center"><small>Crear nueva cuenta</small></a>
        </div>
      </div>
    </div>
    
  </div>
</div>
<script src="/javascripts/login-controller.js"></script>